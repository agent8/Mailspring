{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier", "prettier/react"],
  "globals": {
    "AppEnv": "readonly",
    "$m": false,
    "waitsForPromise": false,
    "advanceClock": false,
    "TEST_ACCOUNT_ID": false,
    "TEST_ACCOUNT_NAME": false,
    "TEST_ACCOUNT_EMAIL": false,
    "TEST_ACCOUNT_ALIAS_EMAIL": false
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "plugins": ["prettier"],
  "rules": {
    "no-cond-assign": 0,
    "prettier/prettier": "error"
  },
  "settings": {
    "react": {
      "version": "16.14.0"
    },
    "import/core-modules": [
      "mailspring-exports",
      "mailspring-component-kit",
      "electron",
      "mailspring-store",
      "mailspring-observables"
    ],
    "import/resolver": {
      "node": { "extensions": [".es6", ".jsx", ".json", ".js"] }
    }
  }
}
